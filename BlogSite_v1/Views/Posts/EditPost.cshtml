@model BlogSite_v1.Models.PostCategoryView

@{
    ViewBag.Title = "Edit";
}

<center><h2>Edit</h2></center>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn-primary btn-sm" })
        <br />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Post.PostId)
        @Html.HiddenFor(model => model.Post.UserId)
        @Html.HiddenFor(model => model.Post.PostDate)

        <br />

        @Html.LabelForModel("Post Title")

        @Html.EditorFor(model => model.Post.PostTitle, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Post.PostTitle, "", new { @class = "text-danger" })


        <br />


        @Html.Label("Post Content")

        @Html.EditorFor(model => model.Post.PostContext, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Post.PostContext, "", new { @class = "text-danger" })

        <br />

        @Html.Label("Category")
        <br />
        @for (var i = 0; i < Model.Categories.Count(); i++)
        {
            @Html.HiddenFor(x => x.Categories[i].CategoryId)
            @Html.CheckBoxFor(x => x.Categories[i].IsChecked)
            @Html.DisplayFor(x => x.Categories[i].CategoryName)
            <br />
        }


        <br />
        <div align="center"><input type="submit" value="Save" class="btn btn-warning btn-sm" /></div><hr />
    </div>
}


