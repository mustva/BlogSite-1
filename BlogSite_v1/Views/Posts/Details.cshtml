@model BlogSite_v1.Models.Post
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Details of Post:  
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostTitle)
        </dd>



        <dt>

        </dt>
    </dl>
    <div>
        <h4>Comments</h4>
        <dl>
            @foreach (var cat in Model.Comment)
            {
                
                <dt>
                    @cat.AspNetUsers.UserName:
                </dt>
                <dd>
                    @cat.CommentContext
                </dd>
                <dd>
                    @cat.CommentDate
                </dd>
            <br />
            }
            @Html.ActionLink("Go Back to Posts", "Index")
        </dl>
    </div>
</div>


