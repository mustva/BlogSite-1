@model BlogSite_v1.Models.Comment


@{
    ViewBag.Title = "AddComment";
}

<center><h2>New Comment</h2></center>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn-primary btn-sm" })<br /><br />


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div align="center">
            <div class="well well-sm" style="background-color:#879289"><b>Comment</b></div>
            @Html.TextAreaFor(model => model.CommentContext, new { style = "width:500px;height:70px;resize: none" })<br />
            @Html.ValidationMessageFor(model => model.CommentContext, " ", new { @class = "text-danger" })
        </div>
        <br />

        

        


        <br />
        <center><input type="submit" value="Send" class="btn btn-warning" /></center><hr />
    </div>
}


