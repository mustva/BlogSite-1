@model BlogSite_v1.Models.Category

@{
    ViewBag.Title = "Edit";
}

<center>
    <h2>@Model.CategoryName</h2>
    <h5>Edit</h5>
</center>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn-primary btn-sm" })
   
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CategoryId)

        <br /><br />
                    @Html.Label("Category Name")
                    
                        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                    <br />
                    <div align="center"><input type="submit" value="Save" class="btn btn-warning btn-sm" /></div>
        <hr />

    </div>
}

