@model BlogSite_v1.Models.Category

@{
    ViewBag.Title = "Create";
}

<center><h2>New Category</h2></center>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn-primary btn-sm" })
        <br /><br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div align="center">
            <div class="well well-sm" style="background-color:seagreen"><b>Category Name</b></div>
            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
        </div>
        <br />

        

        <div align="center">
                <input type="submit" value="Add new Category" class="btn btn-warning" />
            </div>
        <hr />
    </div>
}


