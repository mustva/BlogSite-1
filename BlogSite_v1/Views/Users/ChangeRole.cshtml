@model BlogSite_v1.Models.UserRoleView
@{
    ViewBag.Title = "ChangeRole";
}

<center><h2>Change User Role</h2></center>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn-primary btn-sm" })
        <br />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MyUser.Id)


        <br />
        <center>
            @Html.LabelFor(x => x.MyUser.UserName)
            <br />@Model.MyUser.UserName

            <br />
            <br />


            @Html.Label("User Role")

            <br />

            @for (var i = 0; i < Model.MyRoles.Count(); i++)
            {
                @Html.HiddenFor(x => x.MyRoles[i].Id)
                @Html.CheckBoxFor(x => x.MyRoles[i].IsChecked)
                @Html.DisplayFor(x => x.MyRoles[i].Name)
                <br />
            }
        </center>

        <br />
        <div align="center"><input type="submit" value="Save" class="btn btn-warning btn-sm" /></div><hr />
    </div>
}




