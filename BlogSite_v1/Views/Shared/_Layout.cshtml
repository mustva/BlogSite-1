<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color:slategray;">

    
        <div class="navbar navbar-inverse navbar-fixed-top" >
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Blog Sitesi", "Index", "Posts", new { area = "" }, new { @class = "navbar-brand" })
                </div>


            </div>
        </div>
    
    <div class="container body-content" style="background-color:darkslategray;">
        <div class="row">

            <div class="col-md-2" style="background-color:darkslategray;">

                <div class="panel panel-info">
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav" >

                            <li>@Html.ActionLink("Posts", "Index", "Posts")</li>
                            <br />
                            <li>@Html.ActionLink("Categories", "Index", "Categories")</li>
                            <br />
                            <li>@Html.ActionLink("Users", "Index", "Posts")</li>
                            <br />
                        </ul>

                    </div>



                    
                </div>


            </div>

            <div class="col-md-8" style="background-color:slategray;">
                
                @RenderBody()

            </div>

            <div class="col-md-2" style="background-color:darkslategray;">

                @Html.Partial("_LoginPartial")

            </div>

        </div>
        
        <hr />
        <footer>
            <p>&copy; Sch</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
